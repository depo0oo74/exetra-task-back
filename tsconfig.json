{
    "compilerOptions": {
      "target": "es2020",
      "lib": [
        "es2020",
        "esnext.asynciterable",
        "DOM"
      ],
      "typeRoots": [
        "./node_modules/@types"
      ],
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "pretty": true,
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "allowJs": true,
      "noEmit": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "types": ["express"]
  },
    "include": [
      "./src/**/*",
      ".env"
    ],
    "exclude": [
      "node_modules"
    ]
  }